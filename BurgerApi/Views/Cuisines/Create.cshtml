@model BurgerApi.Models.Cuisine

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section DefaultHeader{
    <ul class="uk-breadcrumb">
        <li>
            <a asp-controller="Cuisines" asp-action="Index">All</a>
        </li>
        <li>
            <span href="">New cuisine</span>
        </li>
    </ul>
}

    <form asp-action="Create">
        <fieldset class="uk-fieldset">
            <legend class="uk-legend">Add new cuisine</legend>
            <div asp-validation-summary="ModelOnly" class="uk-form-danger"></div>

            <div class="uk-margin">
                <input asp-for="CuisineCode" class="uk-input" placeholder="Four letter cuisine code"/>
                <span asp-validation-for="CuisineCode" class="uk-form-danger"></span>
            </div>

            <div class="uk-margin">
                <input asp-for="CuisineTitle" class="uk-input" placeholder="Cuisine title"/>
                <span asp-validation-for="CuisineTitle" class="uk-form-danger"></span>
            </div>
            
            <div class="uk-margin">
                <input type="submit" value="Create" class="uk-button uk-button-primary" />
            </div>

        </fieldset>
    </form>
        
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

