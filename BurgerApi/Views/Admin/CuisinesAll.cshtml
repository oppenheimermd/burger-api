@model IEnumerable<BurgerApi.Models.Cuisine>

@{
    ViewData["Title"] = "Cuisine All";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section DefaultHeader{
    <ul class="uk-breadcrumb">
        <li>
            <a asp-controller="Admin" asp-action="CuisinesAll">All</a>
        </li>
    </ul>
}

<p>
    <a asp-action="CreateCuisine" asp-controller="Admin">Create New</a>
</p>

<table class="uk-table uk-table-divide uk-table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CuisineCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CuisineTitle)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CuisineCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuisineTitle)
            </td>
            <td>
                <a asp-controller="Admin" asp-action="EditCuisine" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Admin" asp-action="EditCuisine" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


