@model IEnumerable<BurgerApi.Models.Burger>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section DefaultHeader{
    <ul class="uk-breadcrumb">
        <li><span href="">Home</span></li>
    </ul>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="uk-table uk-table-divide uk-table-hover">
    <thead>
    <tr>
        <th>
            Id
        </th>
        <th>
            Burger base
        </th>
        <th>
            Cuisine
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BurgerBase.BaseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuisine.CuisineTitle)
            </td>
            <td>
                <img src="@item.Image.BurgerPhotoSmallUrl()" style="max-width: 50px; max-height: 50px;" />
                
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


