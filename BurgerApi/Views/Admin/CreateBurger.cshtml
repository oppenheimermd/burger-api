@model BurgerApi.Models.Burger

@{
    ViewData["Title"] = "Create new burger";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section DefaultHeader{
    <ul class="uk-breadcrumb">
        <li>
            <a asp-controller="Admin" asp-action="Index">All</a>
        </li>
        <li>
            <span href="">New burger</span>
        </li>
    </ul>
}

<form asp-action="CreateBurger" enctype="multipart/form-data">
    <fieldset class="uk-fieldset">
        <legend class="uk-legend">Add new burger</legend>
        <div asp-validation-summary="ModelOnly" class="uk-form-danger"></div>

        <div class="uk-margin">
            <textarea asp-for="Description" class="uk-textarea" rows="5" placeholder="Description"></textarea>
            <span asp-validation-for="Description" class="uk-form-danger"></span>
        </div>

        <div class="uk-margin">
            <input asp-for="InstagramUserId" class="uk-input" placeholder="Instagram user" />
            <span asp-validation-for="InstagramUserId" class="uk-form-danger"></span>
        </div>
        <div class="uk-margin">
            <input asp-for="InstagramSourceUrl" class="uk-input" placeholder="Image soure url" />
            <span asp-validation-for="InstagramSourceUrl" class="uk-form-danger"></span>
        </div>
        <div class="uk-margin">
            <select asp-for="BurgerBaseId" class="uk-select" asp-items="ViewBag.BurgerBase"></select>
        </div>
        <div class="uk-margin">
            <select asp-for="CuisineId" class="uk-select" asp-items="ViewBag.Cuisine"></select>
        </div>

        <div class="uk-margin">
            <div uk-form-custom="target: true">
                <input type="file" name="BurgerImage" id="BurgerImage">
                <input class="uk-input uk-form-width-medium" type="text" placeholder="Select file" disabled>
            </div>
        </div>

        <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
            <label>
                <input asp-for="Verified" class="uk-radio" /> @Html.DisplayNameFor(model => model.Verified)
            </label>
        </div>

        <div class="uk-margin">
            <input type="submit" value="Create" class="uk-button uk-button-primary" />
        </div>

    </fieldset>
</form>



<div>
    <a asp-action="Index" asp-controller="Admin">Back to List</a>
</div>


